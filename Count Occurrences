
#include <stdio.h>
#include <string.h>
int main() {
  char str[100];
  char ch;
  int count = 0;
  int i;
  printf("Enter a string: ");
  gets(str);
  printf("Enter a character: ");
  ch = getchar();
  for (i = 0; i < strlen(str); i++) {
    if (str[i] == ch) {
      count++;
    }
  }
  printf("The character '%c' occurs %d times in the string.\n", ch, count);
  return 0;
}
